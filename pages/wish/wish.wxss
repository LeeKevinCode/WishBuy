.wish-title{
    font-size: 24px;
}
.wish-status{
    font-size: 18px;
    text-transform: uppercase;
}
.wish-profile{
  margin: 5rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}
.wish-profile .requestor{
  width: 750rpx;
  padding: 0
}

.wish-profile .requestor .request-icon{
  flex: 1;
}
.wish-profile .requestor .request-icon image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx 0;
}
.wish-profile .requestor .requestor-desc{
  flex:5;
  text-align: left;
  font-size: 34rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 5rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.wish-description{
  padding: 10rpx 8rpx 8rpx 8rpx;
  font-size: 14px;
  line-height: 48rpx;
  color: 45b4b4b;
  text-align: justify;
  text-justify: inter-word;
}
.btn-accept{
    width: 750rpx;
    margin-top: 40rpx;
}

