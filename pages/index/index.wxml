<view class='container'>
    <block wx:for="{{wishList}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
        <view class="wish-item">

           <view class="wish-title" bindtap="bindTitleTap">
             <a class="title-link">
               <text>{{item.title}}</text>
             </a>
            </view>
            
            <view class="wish-stats">
                <view class="wish-expiry">Wanted By: {{item.expiryDate}}
                </view>
                <view class="wish-status">No Updates{{item.statusText}}</view>
            </view>

            <view bindtap="bindDescTap" class="wish-content">
              <text>{{item.shortDes}}</text>
            </view>

             <view class="wish-actions" bindtap="bindActionTap">
                <view class="like dot">
                    <a>0 likes </a>
                </view>
                <view class="comments dot">
                    <a>0 comments </a>
                </view>
                <view class="follow-it">
                    <a>follow</a>
                </view>
              </view>

        </view>
    </block>
</view>